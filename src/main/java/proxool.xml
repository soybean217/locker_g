<?xml version="1.0" encoding="utf-8"?>  

<proxool-config>  
    <proxool>
        <alias>db</alias>
        <driver-url>jdbc:mysql://127.0.0.1:3306/locker?useUnicode=true&amp;characterEncoding=utf-8</driver-url>
        <driver-class>com.mysql.jdbc.Driver</driver-class>  
        <driver-properties>
        <property name="user" value="locker" /> 
       <property name="password" value="locker" />
        </driver-properties>  
        <minimum-connection-count>10</minimum-connection-count>  
        <maximum-connection-count>1000</maximum-connection-count>  
        <maximum-active-time>60000</maximum-active-time>  
        <house-keeping-test-sql>select 1</house-keeping-test-sql>  
        <prototype-count>5</prototype-count>  
        <house-keeping-sleep-time>60000</house-keeping-sleep-time>
        <simultaneous-build-throttle>500</simultaneous-build-throttle>
    </proxool>  
</proxool-config> 